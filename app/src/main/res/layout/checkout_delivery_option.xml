<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/topLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_checkout1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/midLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLL"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Standard Delivery"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <LinearLayout
            android:id="@+id/radiofst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="order will be delivered between 3-5 business days"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight=".4"/>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Day Delivery"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/secondLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="order will be delivered between 3-5 business days"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".4"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Next"
            android:textColor="@color/red"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>

