<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.VendorDetailsFragment">

   <TextView
       android:id="@+id/vNameTV"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Vendor name"
       android:layout_margin="20dp"
       android:textSize="35sp"
       android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/vNameTV"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/vEmailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email@mail.com"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/vAddressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ooo,road, street xyz, city"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/vContactTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About This Vendor"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/vDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="we are on of the best....."
            android:textSize="16sp"
            />
    </LinearLayout>

</RelativeLayout>